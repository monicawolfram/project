<!-- Bootstrap Bundle with Popper (Required for Dropdowns) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  window.onload = async () => {
    const container = document.querySelector('.books-container .d-flex');
    container.innerHTML = ''; // Clear hardcoded content

    try {
      const res = await fetch('/user/books/departments');
      const departments = await res.json();

      departments.forEach(dept => {
        const card = `
          <div class="book-card">
            <p>${dept.department}</p>
            <img src="${dept.image}" alt="${dept.department}">
            <a href="/user/${dept.page}" class="btn btn-dark btn-sm">View</a>
          </div>
        `;
        container.innerHTML += card;
      });
    } catch (error) {
      console.error('Error fetching departments:', error);
      container.innerHTML = '<p class="text-danger">Failed to load departments.</p>';
    }
  };
</script>

