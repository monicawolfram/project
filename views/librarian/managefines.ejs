<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>MANAGE FINES</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" />
  <style>
    body {
      background: url('library-bg.jpg') no-repeat center center fixed;
      background-size: cover;
      font-family: Arial, sans-serif;
    }
    .sidebar {
      background-color: white;
      min-height: 100vh;
      padding: 20px;
      border-radius: 15px;
    }
    .sidebar .nav-link {
      color: black;
      font-size: 18px;
      padding: 10px 15px;
      display: flex;
      align-items: center;
      gap: 10px;
      text-decoration: none;
    }
    .sidebar .nav-link:hover {
      background-color: green;
      color: white;
      border-radius: 8px;
    }
    .sidebar .logo-container {
      display: flex;
      align-items: center;
      gap: 10px;
      margin-bottom: 20px;
    }
    .sidebar img {
      width: 50px;
      height: 50px;
      border-radius: 50%;
    }
    .top-bar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 10px;
      background: white;
      border-radius: 10px;
      margin-bottom: 20px;
    }
    .notification-badge {
      position: absolute;
      top: 4px;
      right: 8px;
      background: red;
      color: white;
      font-size: 10px;
      padding: 2px 5px;
      border-radius: 50%;
    }
  </style>
</head>
<body>
<div class="container-fluid">
  <div class="row">
    <!-- Sidebar -->
    <nav class="col-md-3 col-lg-2 d-md-block sidebar">
      <div class="logo-container">
        <img src="../images/sjcet.png" alt="SJCET Logo" />
        <h4>SJUCET Library</h4>
      </div>
      <ul class="nav flex-column">
        <li class="nav-item"><a class="nav-link" href="/librarian/librarian_home"><i class="fas fa-home"></i> Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/librarian/librarian_category"><i class="fas fa-book"></i> Manage Catalog</a></li>
        <li class="nav-item"><a class="nav-link" href="/librarian/managerequestlibrarian"><i class="fas fa-tasks"></i> Manage Requests</a></li>
        <li class="nav-item"><a class="nav-link" href="/librarian/manageinventorylibrarian"><i class="fas fa-boxes"></i> Manage Inventory</a></li>
        <li class="nav-item"><a class="nav-link" href="/librarian/massageandfeedback"><i class="fas fa-comments"></i> Messages & Feedback</a></li>
        <li class="nav-item"><a class="nav-link" href="/librarian/generatereport"><i class="fas fa-chart-bar"></i> Generate Reports</a></li>
        <li class="nav-item"><a class="nav-link" href="/librarian/Itsupport"><i class="fas fa-tools"></i> IT Support</a></li>
        <li class="nav-item"><a class="nav-link" href="/librarian/manageusers"><i class="fas fa-users"></i> Manage Users</a></li>
        <li class="nav-item"><a class="nav-link active" href="/librarian/managefines"><i class="fas fa-money-bill-wave"></i> Manage Fines</a></li>
      </ul>
    </nav>

    <!-- Main Content -->
    <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
      <div class="top-bar">
        <input type="text" class="form-control w-25" id="searchBar" placeholder="Search here" />
        <div class="d-flex align-items-center position-relative">
          <div class="dropdown me-3">
            <button class="btn btn-light position-relative" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-bell"></i>
              <span class="notification-badge">3</span>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/librarian/booknotification">New book added</a></li>
              <li><a class="dropdown-item" href="/librarian/requestnotification">Request pending approval</a></li>
              <li><a class="dropdown-item" href="/librarian/systemnotification">System maintenance scheduled</a></li>
              <li><hr class="dropdown-divider" /></li>
              <li><a class="dropdown-item text-center" href="/librarian/viewallnotification">View all</a></li>
            </ul>
          </div>
          <div class="dropdown">
            <button class="btn btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
              <i class="fas fa-user"></i>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
              <li><a class="dropdown-item" href="/librarian/librarian_account">Librarian Account</a></li>
              <li><a class="dropdown-item" href="/librarian/admin_account">Admin Account</a></li>
              <li><hr class="dropdown-divider" /></li>
              <li><a class="dropdown-item text-danger" href="/librarian/librarian_interface">Logout</a></li>
            </ul>
          </div>
        </div>
      </div>

      <!-- Manage Fines -->
      <section class="mt-4">
        <h2>Manage Fines</h2>
        <button class="btn btn-primary mb-3" data-bs-toggle="collapse" data-bs-target="#addFineForm">Add Fine</button>
        <div id="addFineForm" class="collapse">
          <form id="newFineForm" class="mb-4">
            <div class="row">
              <div class="col-md-3 mb-2">
                <input
                  type="text"
                  class="form-control"
                  id="fineId"
                  placeholder="ID"
                  required
                />
              </div>
              <div class="col-md-3 mb-2">
                <select class="form-control" id="fineResource" required>
                  <option value="">Select Resource</option>
                  <option value="Book">Book</option>
                  <option value="Paper">Paper</option>
                  <option value="Project">Project</option>
                </select>
              </div>
              <div class="col-md-2 mb-2">
                <input type="date" class="form-control" id="fineDate" required />
              </div>
              <div class="col-md-2 mb-2">
                <input
                  type="number"
                  class="form-control"
                  id="fineAmount"
                  placeholder="Fine"
                  required
                  min="0"
                />
              </div>
              <div class="col-md-2 mb-2">
                <select class="form-control" id="fineStatus">
                  <option value="Paid">Paid</option>
                  <option value="Unpaid" selected>Unpaid</option>
                </select>
              </div>
            </div>
            <button type="submit" class="btn btn-success">Add Fine</button>
          </form>
        </div>

        <table class="table table-striped" id="finesTable">
          <thead>
            <tr>
              <th>ID</th>
              <th>Resource</th>
              <th>Date</th>
              <th>Fine</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </section>
    </main>
  </div>
</div>
<!-- Edit Fine Modal -->
<div class="modal fade" id="editFineModal" tabindex="-1">
  <div class="modal-dialog">
    <form class="modal-content" id="editFineForm">
      <div class="modal-header">
        <h5 class="modal-title">Edit Fine</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <input type="hidden" id="editFineId">
        <div class="mb-3">
          <label class="form-label">Resource</label>
          <input type="text" class="form-control" id="editFineResource" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Date</label>
          <input type="date" class="form-control" id="editFineDate" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Amount</label>
          <input type="number" class="form-control" id="editFineAmount" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Status</label>
          <select class="form-select" id="editFineStatus">
            <option value="Paid">Paid</option>
            <option value="Unpaid">Unpaid</option>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary" type="submit">Update</button>
        <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
      </div>
    </form>
  </div>
</div>




<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Load fines on page load
  document.addEventListener("DOMContentLoaded", () => {
    loadFines();
  });

  // Fetch fines from backend
  function loadFines() {
    fetch("http://localhost:3000/librarian/fines")
      .then(res => res.json())
      .then(data => {
        if (data.success && Array.isArray(data.fines)) {
          const tbody = document.querySelector("#finesTable tbody");
          tbody.innerHTML = ""; // clear existing rows
          data.fines.forEach(fine => {
            appendFineToTable({
              id: fine.borrower_reg_no,
              resource: fine.resource_title || fine.resource_type || "N/A",
              date: fine.fine_date ? fine.fine_date.split("T")[0] : "",
              amount: fine.fine_amount,
              status: fine.status
            });
          });
        } else {
          console.warn("⚠️ No fines found");
        }
      })
      .catch(err => {
        console.error("Error fetching fines:", err);
        alert("❌ Failed to load fines from server.");
      });
  }

  // Search functionality
  document.getElementById("searchBar").addEventListener("input", function () {
    const query = this.value.toLowerCase();
    const rows = document.querySelectorAll("#finesTable tbody tr");
    rows.forEach(row => {
      const match = Array.from(row.children).some(cell =>
        cell.textContent.toLowerCase().includes(query)
      );
      row.style.display = match ? "" : "none";
    });
  });

  // Add Fine
  document.getElementById("newFineForm").addEventListener("submit", function (e) {
    e.preventDefault();

    const fine = {
      id: document.getElementById("fineId").value.trim(),
      resource: document.getElementById("fineResource").value,
      date: document.getElementById("fineDate").value,
      amount: document.getElementById("fineAmount").value.trim(),
      status: document.getElementById("fineStatus").value,
    };

    if (!fine.resource) {
      alert("Please select a Resource.");
      return;
    }

    fetch("http://localhost:3000/librarian/fines", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(fine),
    })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert("✅ Fine added successfully");
          appendFineToTable(fine);
          this.reset();
          const collapseElem = document.getElementById("addFineForm");
          const bsCollapse = bootstrap.Collapse.getInstance(collapseElem);
          if (bsCollapse) bsCollapse.hide();
        } else {
          alert("❌ Failed to add fine");
        }
      })
      .catch(err => {
        console.error(err);
        alert("❌ Error sending fine data to server.");
      });
  });

  // Append Fine
  function appendFineToTable(fine) {
    const table = document.querySelector("#finesTable tbody");
    const row = document.createElement("tr");
    row.innerHTML = `
      <td>${fine.id}</td>
      <td>${fine.resource}</td>
      <td>${fine.date}</td>
      <td>Tsh ${Number(fine.amount).toLocaleString()}</td>
      <td><span class="badge ${fine.status === "Paid" ? "bg-success" : "bg-danger"}">${fine.status}</span></td>
      <td>
        <button class="btn btn-sm btn-info me-2" onclick="editFine('${fine.id}')">
          <i class="fas fa-pen"></i> Edit
        </button>
        <button class="btn btn-sm btn-danger" onclick="deleteFine('${fine.id}', this)">
          <i class="fas fa-trash-alt"></i> Delete
        </button>
      </td>
    `;
    table.appendChild(row);
  }

  // Edit Fine - show modal and populate fields
  function editFine(id) {
    fetch(`http://localhost:3000/librarian/fines/${id}`)
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          const fine = data.fine;
          document.getElementById("editFineId").value = fine.id;
          document.getElementById("editFineResource").value = fine.resource_title || fine.resource_type;
          document.getElementById("editFineDate").value = fine.fine_date.split("T")[0];
          document.getElementById("editFineAmount").value = fine.fine_amount;
          document.getElementById("editFineStatus").value = fine.status;

          const modal = new bootstrap.Modal(document.getElementById("editFineModal"));
          modal.show();
        } else {
          alert("❌ Fine not found.");
        }
      })
      .catch(err => {
        console.error(err);
        alert("❌ Error fetching fine data.");
      });
  }

  // Submit Edit Fine Form
  document.getElementById("editFineForm").addEventListener("submit", function (e) {
    e.preventDefault();

    const updatedFine = {
      resource: document.getElementById("editFineResource").value,
      date: document.getElementById("editFineDate").value,
      amount: document.getElementById("editFineAmount").value,
      status: document.getElementById("editFineStatus").value,
    };

    const id = document.getElementById("editFineId").value;

    fetch(`http://localhost:3000/librarian/fines/${id}`, {
      method: "PUT",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(updatedFine),
    })
      .then(res => res.json())
      .then(data => {
        if (data.success) {
          alert("✅ Fine updated successfully");
          location.reload(); // optional: replace with row update logic
        } else {
          alert("❌ Failed to update fine");
        }
      })
      .catch(err => {
        console.error(err);
        alert("❌ Error updating fine");
      });
  });

  // Delete Fine
  function deleteFine(id, button) {
    if (confirm("⚠️ Are you sure you want to delete this fine?")) {
      fetch(`http://localhost:3000/librarian/fines/${id}`, {
        method: "DELETE",
      })
        .then(res => res.json())
        .then(data => {
          if (data.success) {
            const row = button.closest("tr");
            row.remove();
            alert("✅ Fine deleted successfully");
          } else {
            alert("❌ Failed to delete fine");
          }
        })
        .catch(err => {
          console.error(err);
          alert("❌ Error deleting fine");
        });
    }
  }
</script>



</body>
</html>
