<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Papers for <%= department %> Department</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- FontAwesome -->
  <script src="https://kit.fontawesome.com/your-fontawesome-key.js" crossorigin="anonymous"></script>

  <style>
    body {
      background-size: cover;
      color: white;
      font-family: 'Poppins', sans-serif;
    }

    .navbar {
      background: rgba(0, 0, 0, 0.8);
      padding: 15px;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

    .nav-link {
      color: white !important;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      color: #ffdd57 !important;
      transform: scale(1.1);
    }

    .dropdown-menu {
      background: #444;
    }

    .dropdown-menu a {
      color: white;
    }

    .dropdown-menu a:hover {
      background: #555;
    }

    .papers-container {
      background: rgba(0, 0, 0, 0.85);
      border-radius: 15px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      margin-top: 20px;
    }

    .paper-card {
      width: 200px;
      background: #2c2c2c;
      border-radius: 10px;
      padding: 12px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
      margin: auto;
      margin-bottom: 20px;
      color: #fff;
    }

    .paper-card img {
      width: 100%;
      height: 140px;
      object-fit: cover;
      border-radius: 6px;
      margin-bottom: 8px;
    }

    .paper-card button {
      background-color: #27ae60;
      color: white;
      border: none;
      padding: 6px 12px;
      border-radius: 20px;
      font-size: 14px;
      margin-top: 10px;
      transition: all 0.3s ease;
    }

    .paper-card button:hover {
      background-color: #2ecc71;
      transform: scale(1.05);
    }

    .footer-btns .btn {
      border-radius: 25px;
      padding: 10px 20px;
      font-size: 16px;
      transition: all 0.3s ease;
      margin: 5px;
    }

    .footer-btns .btn:hover {
      transform: scale(1.1);
      background: #27ae60;
    }
  </style>
</head>
<body>

<div class="container mt-4">
  <!-- Navbar -->
  <nav class="navbar d-flex justify-content-around flex-wrap">
    <a href="/user/home" class="nav-link"><i class="fas fa-home"></i> Home</a>
    <div class="dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
        <i class="fas fa-book"></i> Resources
      </a>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/user/books">Books</a></li>
        <li><a class="dropdown-item" href="/user/papers">Papers</a></li>
        <li><a class="dropdown-item" href="/user/projects">Projects</a></li>
      </ul>
    </div>
    <a href="/user/attendance" class="nav-link"><i class="fas fa-user-check"></i> Attendance</a>
    <div class="dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
        <i class="fas fa-exchange-alt"></i> Transaction
      </a>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/user/borrowing">Borrowing</a></li>
        <li><a class="dropdown-item" href="/user/paying">Paying Fine</a></li>
      </ul>
    </div>
    <div class="dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
        <i class="fas fa-eye"></i> Viewstatus
      </a>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/user/resources">Resources</a></li>
        <li><a class="dropdown-item" href="/user/borrow">Borrow</a></li>
        <li><a class="dropdown-item" href="/user/payment">Payment</a></li>
        <li><a class="dropdown-item" href="/user/profile">Profile</a></li>
      </ul>
    </div>
  </nav>

  <!-- Papers Section -->
  <div class="papers-container">
    <h5>ðŸ“„ Papers for <%= department %> Department ðŸ“„</h5>

    <% if (message) { %>
      <div class="alert alert-warning text-center mt-3"><%= message %></div>
    <% } %>

    <div class="row mt-4">
      <% papers.forEach(paper => { %>
        <div class="col-sm-6 col-md-4 col-lg-3 d-flex justify-content-center">
          <div class="paper-card">
            <img src="/uploads/books/<%= paper.image %>" alt="Paper Image">
            <p class="mb-1"><strong><%= paper.title %></strong></p>
            <small><strong>Author:</strong> <%= paper.author %></small><br />
            <small><strong>Year:</strong> <%= paper.year %></small><br />
            <button 
              data-bs-toggle="modal" 
              data-bs-target="#borrowModal"
              data-title="<%= paper.title %>" 
              data-code="<%= paper.paper_code %>">
              <i class="fas fa-book-reader"></i> Borrow
            </button>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Footer -->
  <div class="footer-btns text-center mt-4">
    <a href="/user/AboutUs" class="btn btn-success"><i class="fas fa-info-circle"></i> About Us</a>
    <a href="/user/help" class="btn btn-success"><i class="fas fa-question-circle"></i> Help</a>
  </div>
</div>

<!-- Borrow Modal -->
<div class="modal fade" id="borrowModal" tabindex="-1" aria-labelledby="borrowModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content text-dark">
      <div class="modal-header">
        <h5 class="modal-title" id="borrowModalLabel">Borrow Paper</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body">
        <form id="borrowForm" novalidate>
          <input type="hidden" id="formPaperCode" name="paper_code" />
          <div class="row g-3">

            <div class="col-md-6">
              <label class="form-label">Borrower ID</label>
              <input type="text" id="borrowerId" class="form-control bg-light text-secondary" value="<%= borrowerId %>" readonly />
            </div>

            <div class="col-md-6">
              <label class="form-label">Borrower Name</label>
              <input type="text" id="borrowerName" class="form-control bg-light text-secondary" value="<%= borrowerName %>" readonly />
            </div>

            <div class="col-md-6">
              <label class="form-label">Resource Type</label>
              <input type="text" id="resourceType" class="form-control bg-light text-secondary" value="paper" readonly />
            </div>

            <div class="col-md-6">
              <label class="form-label">Title</label>
              <input type="text" id="paperTitle" class="form-control bg-light text-secondary" readonly />
            </div>

            <div class="col-md-6">
              <label class="form-label">Borrow Date</label>
              <input type="date" id="borrowDate" class="form-control" readonly />
            </div>

            <div class="col-md-6">
              <label class="form-label">Return Date (max 5 days)</label>
              <input type="date" id="returnDate" class="form-control" required />
              <div id="returnDateError" class="text-danger small mt-1" style="display:none;">
                Return date must be within 5 days.
              </div>
            </div>

          </div>

          <button type="submit" class="btn btn-primary w-100 mt-4">
            <i class="fa fa-book me-2"></i>Submit Borrow Request
          </button>

          <div id="formMsg" class="mt-3"></div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  function formatDate(date) {
    return date.toISOString().split('T')[0];
  }

  const borrowModal = document.getElementById('borrowModal');
  borrowModal.addEventListener('show.bs.modal', event => {
    const button = event.relatedTarget;
    document.getElementById('paperTitle').value = button.getAttribute('data-title');
    document.getElementById('formPaperCode').value = button.getAttribute('data-code');
    document.getElementById('borrowDate').value = formatDate(new Date());

    const returnDate = new Date();
    returnDate.setDate(returnDate.getDate() + 5);
    document.getElementById('returnDate').value = formatDate(returnDate);

    document.getElementById('formMsg').innerHTML = '';
    document.getElementById('returnDateError').style.display = 'none';
  });

  document.getElementById('borrowForm').addEventListener('submit', async function (e) {
    e.preventDefault();
    const borrowDate = new Date(document.getElementById('borrowDate').value);
    const returnDate = new Date(document.getElementById('returnDate').value);

    const diffDays = (returnDate - borrowDate) / (1000 * 60 * 60 * 24);
    if (diffDays < 1 || diffDays > 5) {
      document.getElementById('returnDateError').style.display = 'block';
      return;
    }

    const data = {
      borrower_id: document.getElementById('borrowerId').value.trim(),
      borrower_name: document.getElementById('borrowerName').value.trim(),
      resource_type: 'paper',
      title: document.getElementById('paperTitle').value,
      resource_code: document.getElementById('formPaperCode').value,
      borrow_date: document.getElementById('borrowDate').value,
      return_date: document.getElementById('returnDate').value
    };

    try {
      const res = await fetch('/user/borrow', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      const result = await res.json();
      const msgBox = document.getElementById('formMsg');
      if (result.success) {
        msgBox.innerHTML = `<div class="alert alert-success">Borrow request submitted!</div>`;
        setTimeout(() => {
          bootstrap.Modal.getInstance(borrowModal).hide();
          window.location.href = '/user/borrowing';
        }, 1500);
      } else {
        msgBox.innerHTML = `<div class="alert alert-danger">${result.error || 'Failed'}</div>`;
      }
    } catch (err) {
      document.getElementById('formMsg').innerHTML = `<div class="alert alert-danger">Error occurred.</div>`;
    }
  });
</script>

</body>
</html>
