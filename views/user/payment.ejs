        <h2 class="text-center mt-4">Library Payment History</h2>

        <!-- Payment History Table -->
        <div class="payment-history">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>id</th>
                        <th>Student ID</th>
                        <th>Student Name</th>
                        <th>Payment Date</th>
                        <th>Amount (TZS)</th>
                        <th>Payment Method</th>
                        <th>Status</th>
                    </tr>
                </thead>
