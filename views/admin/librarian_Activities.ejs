<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Manage Librarian Activities</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <style>
    body {
      background-color: #f8f9fa;
    }
    .table-container {
      margin-top: 30px;
    }
    .modal-body label {
      font-weight: bold;
    }
    .badge-action {
      font-size: 0.85rem;
    }
  </style>
</head>
<body>

  <div class="container">
    <h2 class="my-4 text-center">ðŸ“‹ Manage Librarian Activities</h2>

    <!-- Search + Filter -->
    <div class="row mb-3">
      <div class="col-md-6">
        <input type="text" id="searchInput" class="form-control" placeholder="Search by name, action...">
      </div>
      <div class="col-md-3">
        <select id="filterAction" class="form-select">
          <option value="">All Actions</option>
          <option value="ADDED">Added</option>
          <option value="UPDATED">Updated</option>
          <option value="DELETED">Deleted</option>
        </select>
      </div>
    </div>

    <!-- Table -->
    <div class="table-responsive table-container">
      <table class="table table-bordered table-hover align-middle text-center">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Librarian</th>
            <th>Action</th>
            <th>Details</th>
            <th>Timestamp</th>
            <th>Options</th>
          </tr>
        </thead>
        <tbody id="activityTable">
          <!-- Rows injected via JS -->
        </tbody>
      </table>
    </div>
  </div>

  <!-- View Modal -->
  <div class="modal fade" id="viewModal" tabindex="-1" aria-labelledby="viewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Activity Details</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <p><label>Librarian:</label> <span id="viewLibrarian"></span></p>
          <p><label>Action:</label> <span id="viewAction" class="badge bg-info"></span></p>
          <p><label>Details:</label> <span id="viewDetails"></span></p>
          <p><label>Timestamp:</label> <span id="viewTimestamp"></span></p>
        </div>
      </div>
    </div>
  </div>

  <script>
    const activities = [
      { id: 1, name: "John Doe", action: "ADDED", details: "Added new book: 'JavaScript Basics'", timestamp: "2025-06-04 10:15" },
      { id: 2, name: "Alice Smith", action: "UPDATED", details: "Updated book info: 'CSS Mastery'", timestamp: "2025-06-04 10:20" },
      { id: 3, name: "John Doe", action: "DELETED", details: "Deleted book: 'Old HTML Guide'", timestamp: "2025-06-04 10:30" },
    ];

    function renderTable(data) {
      const table = document.getElementById("activityTable");
      table.innerHTML = "";
      data.forEach((act, idx) => {
        table.innerHTML += `
          <tr>
            <td>${idx + 1}</td>
            <td>${act.name}</td>
            <td><span class="badge bg-${getActionColor(act.action)} badge-action">${act.action}</span></td>
            <td>${act.details.slice(0, 40)}...</td>
            <td>${act.timestamp}</td>
            <td>
              <button class="btn btn-sm btn-primary" onclick="viewDetails(${act.id})">View</button>
            </td>
          </tr>
        `;
      });
    }

    function getActionColor(action) {
      return {
        ADDED: 'success',
        UPDATED: 'warning',
        DELETED: 'danger'
      }[action] || 'secondary';
    }

    function viewDetails(id) {
      const act = activities.find(a => a.id === id);
      if (!act) return;

      document.getElementById("viewLibrarian").textContent = act.name;
      document.getElementById("viewAction").textContent = act.action;
      document.getElementById("viewAction").className = `badge bg-${getActionColor(act.action)}`;
      document.getElementById("viewDetails").textContent = act.details;
      document.getElementById("viewTimestamp").textContent = act.timestamp;

      new bootstrap.Modal(document.getElementById("viewModal")).show();
    }

    // Filters
    document.getElementById("searchInput").addEventListener("input", filterData);
    document.getElementById("filterAction").addEventListener("change", filterData);

    function filterData() {
      const search = document.getElementById("searchInput").value.toLowerCase();
      const filterAction = document.getElementById("filterAction").value;

      const filtered = activities.filter(a =>
        (a.name.toLowerCase().includes(search) || a.details.toLowerCase().includes(search)) &&
        (filterAction === "" || a.action === filterAction)
      );

      renderTable(filtered);
    }

    // Initial load
    renderTable(activities);
  </script>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
