<script>
document.addEventListener("DOMContentLoaded", function () {
  const predefinedSelect = document.getElementById("reportType");
  const generateBtn = document.querySelector(".btn-primary");
  const downloadButtons = document.querySelectorAll(".download-options button");

  // Disable downloads on load
  downloadButtons.forEach(btn => {
    btn.disabled = true;
    btn.classList.add("disabled");
  });

  generateBtn.addEventListener("click", () => {
    const type = predefinedSelect.value;
    showLoading("Fetching report: " + type);

    fetch('/Librarian/report', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ reportType: type })
    })
    .then(res => res.json())
    .then(data => {
      hideLoading();
      if (data.success) {
        alert("‚úÖ Data fetched for: " + type);
        // Save reportType for downloads
        sessionStorage.setItem('reportType', type);
        enableDownloads();
      } else {
        alert("‚ùå " + data.message);
      }
    })
    .catch(err => {
      hideLoading();
      console.error(err);
      alert("‚ùå Failed to fetch report");
    });
  });

  // Add click listeners for download buttons
  downloadButtons.forEach(btn => {
    btn.addEventListener('click', e => {
      if (btn.disabled) {
        e.preventDefault();
        return;
      }
      const reportType = sessionStorage.getItem('reportType');
      const url = btn.getAttribute('data-url'); // get URL from data attribute
      if (reportType && url) {
        e.preventDefault();
        // Append reportType as query param for backend filtering
        window.location.href = `${url}?reportType=${encodeURIComponent(reportType)}`;
      }
    });
  });

  function enableDownloads() {
    downloadButtons.forEach(btn => {
      btn.disabled = false;
      btn.classList.remove("disabled");
    });
  }

  function showLoading(message) {
    hideLoading();
    const container = document.querySelector(".col-md-9.ms-sm-auto.col-lg-10.px-md-4");
    const loading = document.createElement("div");
    loading.className = "alert alert-info mt-3";
    loading.id = "loadingMessage";
    loading.innerText = message;
    container.prepend(loading);
  }

  function hideLoading() {
    const loading = document.getElementById("loadingMessage");
    if (loading) loading.remove();
  }
});
</script>

