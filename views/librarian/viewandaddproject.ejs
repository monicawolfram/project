              <ul
                class="dropdown-menu dropdown-menu-end"
                aria-labelledby="userDropdown"
              >
                <li>
                  <a class="dropdown-item" href="librarian_account.ejs"
                    >Librarian Account</a
                  >
                </li>
                <li>
                  <a class="dropdown-item" href="admin_account.ejs">Admin Account</a>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                  <a
                    class="dropdown-item text-danger"
                    href="librarian_interface.ejs"
                    >Logout</a
                  >
                </li>
              </ul>
            </div>
          </div>
        </div>

        <div class="content-container">
          <h2 class="text-center mb-4">Librarian Dashboard - Manage Projects</h2>

          <ul class="nav nav-tabs" id="libraryTabs" role="tablist">
            <li class="nav-item" role="presentation">
              <button
                class="nav-link active"
                id="viewprojects-tab"
                data-bs-toggle="tab"
                data-bs-target="#viewprojects"
                type="button"
                role="tab"
                aria-controls="viewprojects"
                aria-selected="true"
              >
                View Projects
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button
                class="nav-link"
                id="addprojects-tab"
                data-bs-toggle="tab"
                data-bs-target="#addprojects"
                type="button"
                role="tab"
                aria-controls="addprojects"
                aria-selected="false"
              >
                Add Projects
              </button>
            </li>
            <li class="nav-item" role="presentation">
              <button
                class="nav-link"
                id="removeprojects-tab"
                data-bs-toggle="tab"
                data-bs-target="#removeprojects"
                type="button"
                role="tab"
                aria-controls="removeprojects"
                aria-selected="false"
              >
                Remove Projects
              </button>
            </li>
          </ul>

          <div class="tab-content mt-3" id="libraryTabsContent">
            <!-- View Projects Tab -->
            <div
              class="tab-pane fade show active"
              id="viewprojects"
              role="tabpanel"
              aria-labelledby="viewprojects-tab"
            >
              <ul
                class="nav nav-pills mb-3"
                id="viewProjectsTabs"
                role="tablist"
              >
                <li class="nav-item" role="presentation">
                  <button
                    class="nav-link active"
                    id="availableprojects-tab"
                    data-bs-toggle="pill"
                    data-bs-target="#availableprojects"
                    type="button"
                    role="tab"
                    aria-controls="availableprojects"
                    aria-selected="true"
                  >
                    Available Projects
                  </button>
                </li>
                <li class="nav-item" role="presentation">
                  <button
                    class="nav-link"
                    id="deletedprojects-tab"
                    data-bs-toggle="pill"
                    data-bs-target="#deletedprojects"
                    type="button"
                    role="tab"
                    aria-controls="deletedprojects"
                    aria-selected="false"
                  >
                    Deleted Projects
                  </button>
                </li>
                <li class="nav-item" role="presentation">
                  <button
                    class="nav-link"
                    id="borrowedprojects-tab"
                    data-bs-toggle="pill"
                    data-bs-target="#borrowedprojects"
                    type="button"
                    role="tab"
                    aria-controls="borrowedprojects"
                    aria-selected="false"
