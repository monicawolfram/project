        function logout() {
            // Add any necessary logout logic here (e.g., clearing session storage, API calls, etc.)
            alert("You have successfully logged out!");
            window.location.href = "login.ejs";  // Redirect to login page
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

