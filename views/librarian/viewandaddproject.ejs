            <a class="nav-link active" href="librarian_category.ejs"
              ><i class="fas fa-book"></i> Manage Catalog</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="managerequestlibrarian.ejs"
              ><i class="fas fa-tasks"></i> Manage Requests</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="manageinventorylibrarian.ejs"
              ><i class="fas fa-boxes"></i> Manage Inventory</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="massageandfeedback.ejs"
              ><i class="fas fa-comments"></i> Messages & Feedback</a
            >
          </li>
          <li class="nav-item">
            <a class="nav-link" href="generatereport.ejs"
              ><i class="fas fa-chart-bar"></i> Generate Reports</a
