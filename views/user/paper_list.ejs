<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Papers for <%= department %> Department</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- FontAwesome -->
  <script src="https://kit.fontawesome.com/your-fontawesome-key.js" crossorigin="anonymous"></script>

  <style>
    body {
      background-size: cover;
      color: white;
      font-family: 'Poppins', sans-serif;
    }

    .navbar {
      background: rgba(0, 0, 0, 0.8);
      padding: 15px;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

    .nav-link {
      color: white !important;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      color: #ffdd57 !important;
      transform: scale(1.1);
    }

    .dropdown-menu {
      background: #444;
    }

    .dropdown-menu a {
      color: white;
    }

    .dropdown-menu a:hover {
      background: #555;
    }

    .papers-container {
      background: rgba(0, 0, 0, 0.85);
      border-radius: 15px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      margin-top: 20px;
    }

    .paper-card {
      width: 180px;
      background: #2c2c2c;
      border-radius: 10px;
      padding: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
      margin: auto;
      margin-bottom: 20px;
    }

    .paper-card img {
      width: 100%;
      height: 120px;
      object-fit: cover;
      border-radius: 6px;
      margin-bottom: 8px;
    }

    .footer-btns .btn {
      border-radius: 25px;
      padding: 10px 20px;
      font-size: 16px;
      transition: all 0.3s ease;
      margin: 5px;
    }

    .footer-btns .btn:hover {
      transform: scale(1.1);
      background: #27ae60;
    }
  </style>
</head>
<body>

<div class="container mt-4">
  <!-- Navbar -->
  <nav class="navbar d-flex justify-content-around flex-wrap">
    <a href="/user/home" class="nav-link"><i class="fas fa-home"></i> Home</a>
    <div class="dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
        <i class="fas fa-book"></i> Resources
      </a>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/user/books">Books</a></li>
        <li><a class="dropdown-item" href="/user/papers">Papers</a></li>
        <li><a class="dropdown-item" href="/user/projects">Projects</a></li>
      </ul>
    </div>
    <a href="/user/attendance" class="nav-link"><i class="fas fa-user-check"></i> Attendance</a>
    <div class="dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
        <i class="fas fa-exchange-alt"></i> Transaction
      </a>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/user/borrowing">Borrowing</a></li>
        <li><a class="dropdown-item" href="/user/paying">Paying Fine</a></li>
      </ul>
    </div>
    <div class="dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
        <i class="fas fa-eye"></i> Viewstatus
      </a>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/user/resources">Resources</a></li>
        <li><a class="dropdown-item" href="/user/payment">Payment</a></li>
        <li><a class="dropdown-item" href="/user/profile">Profile</a></li>
      </ul>
    </div>
  </nav>

  <!-- Papers Section -->
  <div class="papers-container">
    <h5>ðŸ“„ Papers for <%= department %> Department ðŸ“„</h5>

    <% if (message) { %>
      <div class="alert alert-warning text-center mt-3"><%= message %></div>
    <% } %>

    <div class="row mt-4">
      <% papers.forEach(paper => { %>
        <div class="col-sm-6 col-md-4 col-lg-3 d-flex justify-content-center">
          <div class="paper-card">
            <img src="/uploads/papers/<%= paper.image %>" alt="Paper Image" />
            <p class="mb-1"><strong><%= paper.title %></strong></p>
            <small><strong>Author:</strong> <%= paper.author %></small><br />
            <small><strong>Year:</strong> <%= paper.year %></small>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Footer -->
  <div class="footer-btns text-center mt-4">
    <a href="/user/AboutUs" class="btn btn-success"><i class="fas fa-info-circle"></i> About Us</a>
    <a href="/user/help" class="btn btn-success"><i class="fas fa-question-circle"></i> Help</a>
  </div>
</div>

<!-- Bootstrap Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
