        <!-- Page Heading -->
        <div class="main-content">
          <h3>ðŸ“© Messages & Feedback</h3>

          <div class="search-bar">
            <input type="text" id="searchInput" class="form-control" placeholder="Search messages...">
            <button class="btn btn-primary" id="sendMessage">Send</button>
          </div>

          <!-- Tabs -->
          <ul class="nav nav-tabs">
            <li class="nav-item"><a class="nav-link active" href="#" id="allMessagesTab">All Messages</a></li>
            <li class="nav-item"><a class="nav-link" href="#" id="replyMessagesTab">Reply Message</a></li>
            <li class="nav-item"><a class="nav-link text-success" href="#" id="feedbackTab">Feedback</a></li>
          </ul>

          <!-- Message Table -->
          <table class="table table-bordered mt-3">
            <thead>
              <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Message</th>
                <th>Attachments</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody id="messageTable"></tbody>
          </table>
        </div>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
  $(document).ready(function () {
    let messages = [];

    // Load messages from backend
    function fetchMessages() {
      fetch('http://localhost:3000/librarian/all-messages')
        .then(res => res.json())
        .then(data => {
          messages = data;
          loadMessages("all");
        })
        .catch(err => console.error("Failed to fetch messages:", err));
    }

    // Render messages into the table
    function loadMessages(filterType = "all") {
      let tableContent = "";
      messages.forEach((msg, index) => {
        if (filterType === "reply" && msg.status !== "Resolved") return;
        if (filterType === "feedback" && msg.type !== "Feedback") return;

        const badgeClass =
          msg.status === "Opened"
            ? "badge-warning"
            : msg.status === "In Progress"
            ? "badge-primary"
            : "badge-success";

        tableContent += `
          <tr>
            <td>${msg.name}</td>
            <td>${msg.type}</td>
            <td class="message-click" data-index="${index}" style="cursor:pointer;">${msg.message}</td>
            <td class="attachment-click" data-attachment="${msg.attachment}" style="cursor:pointer;">${msg.attachment}</td>
            <td><span class="badge ${badgeClass}">${msg.status}</span></td>
          </tr>`;
      });

      $("#messageTable").html(tableContent);
    }

    // Tab click handlers
    $("#allMessagesTab").click(function () {
      $(".nav-link").removeClass("active");
      $(this).addClass("active");
      loadMessages("all");
    });

    $("#replyMessagesTab").click(function () {
      $(".nav-link").removeClass("active");
      $(this).addClass("active");
      loadMessages("reply");
    });

    $("#feedbackTab").click(function () {
      $(".nav-link").removeClass("active");
      $(this).addClass("active");
      loadMessages("feedback");
    });

    // Search filter
    $("#searchInput").on("keyup", function () {
      const value = $(this).val().toLowerCase();
      $("#messageTable tr").filter(function () {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
      });
    });

    // Click to view message
    $(document).on("click", ".message-click", function () {
      const index = $(this).data("index");
      alert("Message:\n" + messages[index].message);
    });

    // Click to view attachment
    $(document).on("click", ".attachment-click", function () {
      const attachment = $(this).data("attachment");
      alert("Opening attachment: " + attachment);
    });

    // Send dummy message (for testing)
    $("#sendMessage").click(function () {
      fetch("http://localhost:3000/librarian/add-message", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          name: "Test User",
          type: "Suggestion",
          message: "Example suggestion from user.",
          attachment: "ðŸ“Ž",
          status: "Opened",
        }),
      })
        .then((res) => res.json())
        .then((data) => {
          alert("Message sent!");
          fetchMessages(); // reload after sending
        })
        .catch((err) => console.error("Error sending message:", err));
    });

    // Initial load
    fetchMessages();
  });
</script>

</body>
