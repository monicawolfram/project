<script>
  // Helper function to handle response display
  function showResponse(div, message, isSuccess) {
    div.className = 'response-message'; // Reset classes
    div.textContent = '';
    div.innerHTML = '';
    div.classList.add(isSuccess ? 'response-success' : 'response-error');
    div.innerHTML = message;
    div.style.display = 'block';
  }

  // Suggestion form handler
  document.getElementById('suggestionForm')?.addEventListener('submit', async function (e) {
    e.preventDefault();

    const responseDiv = document.getElementById('suggestionResponse');
    const message = this.message.value.trim();

    if (!message) {
      showResponse(responseDiv, 'Please enter a suggestion.', false);
      return;
    }

    try {
      const res = await fetch('/user/save-suggestion', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ type: 'suggestion', message }),
      });
      const data = await res.json();

      if (res.ok) {
        showResponse(responseDiv, data.message || 'Suggestion sent successfully.', true);
        this.reset();
      } else {
        showResponse(responseDiv, data.message || 'Failed to send suggestion.', false);
      }
    } catch (err) {
      showResponse(responseDiv, 'Server error. Please try again later.', false);
    }
  });

  // Question form handler
  document.getElementById('questionForm')?.addEventListener('submit', async function (e) {
    e.preventDefault();

    const responseDiv = document.getElementById('questionResponse');
    const message = this.message.value.trim();

    if (!message) {
      showResponse(responseDiv, 'Please enter a question.', false);
      return;
    }

    try {
      const res = await fetch('/user/save-question', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ type: 'question', message }),
      });
      const data = await res.json();

      if (res.ok) {
        const answer = data.autoAnswer || 'Thank you for your question! Our librarian will get back to you shortly.';
        showResponse(responseDiv, `<strong>Answer:</strong> ${answer}`, true);
        this.reset();
      } else {
        showResponse(responseDiv, data.message || 'Failed to send question.', false);
      }
    } catch (err) {
      showResponse(responseDiv, 'Server error. Please try again later.', false);
    }
  });
</script>

