            <!-- Add Projects Tab -->
            <div
              class="tab-pane fade"
              id="addprojects"
              role="tabpanel"
              aria-labelledby="addprojects-tab"
            >
              <h4 class="text-center mb-3">Add a New Project</h4>
             <form id="addProjectForm" method="POST" action="/librarian/projects/add" enctype="multipart/form-data">
  <div class="mb-3">
    <label class="form-label">Project Cover Image</label>
    <input type="file" class="form-control" name="project_image" accept="image/*" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input type="text" class="form-control" name="title" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Author</label>
    <input type="text" class="form-control" name="author" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Department</label>
    <input type="text" class="form-control" name="department" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Date</label>
    <input type="date" class="form-control" name="date_added" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Project Code</label>
    <div class="input-group">
      <input type="text" class="form-control" name="project_code" id="projectCode" readonly required>
      <button type="button" class="btn btn-primary" onclick="generateProjectCode()">Generate Code</button>
    </div>
  </div>
  <div class="mb-3">
    <label class="form-label">Shelf Number</label>
    <input type="number" class="form-control" name="shelf_no" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Drawer Number</label>
    <input type="number" class="form-control" name="draw_no" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Year</label>
    <input type="number" class="form-control" name="year" required>
  </div>
  <input type="hidden" name="to_json" value="true">
  <button type="submit" class="btn btn-success">Submit</button>
</form>

            </div>

            <!-- Remove Projects Tab -->
            <div
              class="tab-pane fade"
              id="removeprojects"
              role="tabpanel"
              aria-labelledby="removeprojects-tab"
            >
              <h4 class="text-center mb-3">Remove a Project</h4>
              <form id="removeProjectForm" onsubmit="event.preventDefault(); searchProject();">
                <div class="mb-3">
                  <label for="searchProjectInput" class="form-label"
                    >Enter Project Code or Title</label
                  >
                  <div class="input-group">
                    <input
                      type="text"
                      class="form-control"
                      id="searchProjectInput"
                      required
                    />
                    <button
                      type="submit"
                      class="btn btn-secondary"
                    >
                      Search
                    </button>
                  </div>
                </div>
              </form>

              <div id="projectDetails" class="mb-3 d-none">
                <p><strong>Title:</strong> <span id="projectTitleDisplay"></span></p>
                <p><strong>Author:</strong> <span id="projectAuthorDisplay"></span></p>
                <button
                  type="button"
                  class="btn btn-danger"
                  onclick="removeProject()"
                >
                  Remove Project
                </button>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </div>

  <script>
     function generateProjectCode() {
    document.getElementById("projectCode").value =
      "PR" + Math.floor(1000 + Math.random() * 9000);
  }

    async function searchProject() {
      const searchInput = document.getElementById("searchProjectInput").value.trim();
      if (!searchInput) {
        alert("Please enter a project code or title.");
        return;
      }

      try {
        const response = await fetch(`http://localhost:3000/api/projects/${encodeURIComponent(searchInput)}`);
        const data = await response.json();

        if (data.message) {
          alert(data.message);
          document.getElementById("projectDetails").classList.add("d-none");
        } else {
          document.getElementById("projectTitleDisplay").textContent = data.title;
          document.getElementById("projectAuthorDisplay").textContent = data.author;
          document.getElementById("projectDetails").classList.remove("d-none");
        }
      } catch (error) {
        console.error("Error:", error);
        alert("Error fetching project details.");
      }
    }

    async function removeProject() {
      const searchInput = document.getElementById("searchProjectInput").value.trim();
      if (!confirm("Are you sure you want to remove this project?")) return;

      try {
        const response = await fetch(`http://localhost:3000/api/projects/${encodeURIComponent(searchInput)}`, {
          method: "DELETE",
        });
        const data = await response.json();
        alert(data.message);
        document.getElementById("projectDetails").classList.add("d-none");
        document.getElementById("searchProjectInput").value = "";
      } catch (error) {
        console.error("Error:", error);
        alert("Error removing project.");
      }
    }

    function filterProjects() {
      // Placeholder for search/filter logic if needed
    }

    document.getElementById("addProjectForm").addEventListener("submit", async (e) => {
      e.preventDefault();

      const newProject = {
        title: document.getElementById("projectTitle").value.trim(),
        author: document.getElementById("projectAuthor").value.trim(),
        date_added: document.getElementById("projectDate").value,
        project_code: document.getElementById("projectCode").value.trim(),
      };

      // TODO: Send POST request to backend to add the project
      // Example:
