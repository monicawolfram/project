  <!-- FontAwesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

  <style>
        /* Background Image for Entire Page */
        body {
            background-size: cover;
            color: white;
            font-family: 'Poppins', sans-serif;
        }

        /* Navbar Styling */
