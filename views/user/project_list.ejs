<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Projects for <%= department %></title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <h2 class="text-center mb-4">Projects for <%= department %> Department</h2>

    <% if (message) { %>
      <div class="alert alert-warning text-center"><%= message %></div>
    <% } %>

    <div class="row">
      <% projects.forEach(project => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <img src="/<%= project.image_url || 'images/projects/default.jpg' %>" class="card-img-top" alt="Project Image">
            <div class="card-body">
              <h5 class="card-title"><%= project.title %></h5>
              <p class="card-text"><strong>Author:</strong> <%= project.author %></p>
              <p class="card-text"><strong>Year:</strong> <%= project.year %></p>
              <a href="<%= project.file_url %>" class="btn btn-primary" target="_blank">View Project</a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
