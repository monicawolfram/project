  <script>
    // Generate a paper code like BK1234
    function generateCode() {
      document.getElementById("paperCode").value =
        "BK" + Math.floor(1000 + Math.random() * 9000);
    }

    // Filter papers on top-bar input (dummy for now)
    function filterPapers() {
      // Implement search/filter logic here if needed
    }

    // Search for paper by code or title (calls backend)
    async function searchPaper() {
      const searchInput = document.getElementById("searchPaperInput").value.trim();
      if (!searchInput) {
        alert("Please enter a paper code or title.");
        return;
      }

      try {
        const response = await fetch(`http://localhost:3000/api/papers/${encodeURIComponent(searchInput)}`);
        const data = await response.json();

        if (data.message) {
          alert(data.message);
          document.getElementById("paperDetails").classList.add("d-none");
        } else {
          document.getElementById("paperTitleDisplay").textContent = data.title;
          document.getElementById("paperAuthorDisplay").textContent = data.author;
          document.getElementById("paperDetails").classList.remove("d-none");
        }
      } catch (error) {
        console.error("Error:", error);
        alert("Error fetching paper details.");
      }
    }

    // Remove paper (calls backend DELETE)
    async function removePaper() {
      const searchInput = document.getElementById("searchPaperInput").value.trim();
      if (!confirm("Are you sure you want to remove this paper?")) return;

      try {
        const response = await fetch(`http://localhost:3000/api/papers/${encodeURIComponent(searchInput)}`, {
          method: "DELETE",
        });
        const data = await response.json();
        alert(data.message);
        document.getElementById("paperDetails").classList.add("d-none");
        document.getElementById("searchPaperInput").value = "";
      } catch (error) {
        console.error("Error:", error);
        alert("Error removing paper.");
      }
    }

    // Handle Add Paper form submission (placeholder)
    document.getElementById("addPaperForm").addEventListener("submit", async (e) => {
      e.preventDefault();

      const newPaper = {
