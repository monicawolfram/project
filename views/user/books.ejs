<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Books by Department</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

  <!-- FontAwesome -->
  <script src="https://kit.fontawesome.com/your-fontawesome-key.js" crossorigin="anonymous"></script>

  <style>
    body {
      background-size: cover;
      color: white;
      font-family: 'Poppins', sans-serif;
    }

    .navbar {
      background: rgba(0, 0, 0, 0.8);
      padding: 15px;
      border-radius: 15px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

    .nav-link {
      color: white !important;
      font-weight: 500;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      color: #ffdd57 !important;
      transform: scale(1.1);
    }

    .dropdown-menu {
      background: #444;
    }

    .dropdown-menu a {
      color: white;
    }

    .dropdown-menu a:hover {
      background: #555;
    }

    .books-container {
      background: rgba(0, 0, 0, 0.85);
      border-radius: 15px;
      padding: 20px;
      text-align: center;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .book-scroll {
      display: flex;
      gap: 1rem;
      overflow-x: auto;
      padding-bottom: 10px;
    }

    .book-card {
      flex: 0 0 auto;
      width: 180px;
      background: #2c2c2c;
      border-radius: 10px;
      padding: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
    }

    .book-card img {
      width: 100%;
      height: 120px;
      object-fit: cover;
      border-radius: 6px;
      margin-bottom: 8px;
    }

    .footer-btns .btn {
      border-radius: 25px;
      padding: 10px 20px;
      font-size: 16px;
      transition: all 0.3s ease;
      margin: 5px;
    }

    .footer-btns .btn:hover {
      transform: scale(1.1);
      background: #27ae60;
    }
  </style>
</head>
<body>

<div class="container mt-4">
  <nav class="navbar d-flex justify-content-around flex-wrap">
    <a href="/user/home" class="nav-link"><i class="fas fa-home"></i> Home</a>
    <div class="dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
        <i class="fas fa-book"></i> Resources
      </a>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/user/books">Books</a></li>
        <li><a class="dropdown-item" href="/user/papers">Papers</a></li>
        <li><a class="dropdown-item" href="/user/projects">Projects</a></li>
      </ul>
    </div>
    <a href="/user/attendance" class="nav-link"><i class="fas fa-user-check"></i> Attendance</a>
    <div class="dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
        <i class="fas fa-exchange-alt"></i> Transaction
      </a>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/user/borrowing">Borrowing</a></li>
        <li><a class="dropdown-item" href="/user/paying">Paying Fine</a></li>
      </ul>
    </div>
    <div class="dropdown">
      <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
        <i class="fas fa-eye"></i> Viewstatus
      </a>
      <ul class="dropdown-menu">
        <li><a class="dropdown-item" href="/user/resources">Resources</a></li>
        <li><a class="dropdown-item" href="/user/payment">Payment</a></li>
        <li><a class="dropdown-item" href="/user/profile">Profile</a></li>
      </ul>
    </div>
  </nav>

  <!-- Books Section -->
  <div class="books-container mt-4">
    <h5>üìö Available Books by Department üìö</h5>
    <div class="book-scroll">
      <!-- Dynamic content loads here -->
    </div>
  </div>

  <!-- Footer -->
  <div class="footer-btns text-center mt-3">
    <a href="/user/AboutUs" class="btn btn-success"><i class="fas fa-info-circle"></i> About Us</a>
    <a href="/user/help" class="btn btn-success"><i class="fas fa-question-circle"></i> Help</a>
  </div>
</div>

<!-- Bootstrap Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- JS: Fetch and Render Departments -->
<script>
  window.onload = async () => {
    const container = document.querySelector('.book-scroll');
    container.innerHTML = '<p class="text-white">Loading...</p>';

    try {
      const res = await fetch('/user/books/departments');
      const departments = await res.json();

      if (!departments || departments.length === 0) {
        container.innerHTML = '<p class="text-warning">No departments found.</p>';
        return;
      }

      container.innerHTML = ''; // Clear loader

      // Show only the first 9 departments
      const limitedDepartments = departments.slice(0, 9);

      limitedDepartments.forEach(dept => {
        const card = `
          <div class="book-card">
            <p><strong>${dept.department}</strong></p>
            <img src="${dept.image ? '/uploads/books/' + dept.image : 'https://via.placeholder.com/150'}" alt="${dept.department}">

            <a href="/user/show-books/${dept.page}" class="btn btn-sm btn-light mt-2">View</a>
          </div>
        `;
        container.innerHTML += card;
      });
    } catch (error) {
      console.error('‚ùå Error loading departments:', error);
      container.innerHTML = '<p class="text-danger">Failed to load departments.</p>';
    }
  };
</script>


</body>
</html>
