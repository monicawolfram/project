            margin: 5px;
        }
        .footer-btns .btn:hover {
            transform: scale(1.1);
            background: #27ae60;
        }
    </style>
</head>
<body>
  <div class="container mt-4">
    <nav class="navbar d-flex justify-content-around">
            <a href="home.ejs" class="nav-link"><i class="fas fa-home"></i> Home</a>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle" href="Resources.ejs" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-book"></i> Resources
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="books.ejs">Books</a></li>
                    <li><a class="dropdown-item" href="papers.ejs">Papers</a></li>
                    <li><a class="dropdown-item" href="projects.ejs">Projects</a></li>
                </ul>
            </div>
            <a href="attendance.ejs" class="nav-link"><i class="fas fa-user-check"></i> Attendance</a>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle" href="transcation.ejs" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-exchange-alt"></i> Transaction
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="borrowing.ejs">Borrowing</a></li>
                    <li><a class="dropdown-item" href="paying.ejs">Paying Fine</a></li>
                </ul>
            </div>
            <div class="dropdown">
                <a class="nav-link dropdown-toggle" href="viewstatus.ejs" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-eye"></i> Viewstatus
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="resources.ejs">Resources</a></li>
                    <li><a class="dropdown-item" href="payment.ejs">Payment </a></li>
                    <li><a class="dropdown-item" href="profile.ejs">Profile </a></li>
                </ul>
            </div>
        </nav>

    <div class="container my-4 bg-light text-dark rounded shadow p-4">
      <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
          <select id="monthSelect" class="form-select d-inline w-auto"></select>
          <select id="yearSelect" class="form-select d-inline w-auto"></select>
        </div>
        <div class="fw-bold"><i class="fa fa-user-circle"></i> Alice William</div>
      </div>

      <div class="table-responsive">
        <table class="table table-bordered text-center align-middle">
          <thead class="table-dark">
            <tr>
              <th>Date</th>
              <th>Monday</th>
              <th>Tuesday</th>
              <th>Wednesday</th>
              <th>Thursday</th>
              <th>Friday</th>
            </tr>
          </thead>
          <tbody id="attendance-body">
            <tr><td colspan="6">Loading attendance...</td></tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="footer-btns text-center mt-3">
      <a href="AboutUs.ejs" class="btn btn-success"><i class="fa-solid fa-info-circle"></i> About Us</a>
      <a href="help.ejs" class="btn btn-success"><i class="fa-solid fa-question-circle"></i> Help</a>
    </div>
  </div>

  <!-- Bootstrap JS (required for dropdown functionality) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const regNo = "23IT013"; // Change to dynamic user registration number
    const attendanceBody = document.getElementById("attendance-body");
    const monthSelect = document.getElementById("monthSelect");
    const yearSelect = document.getElementById("yearSelect");

    const months = [
      "January", "February", "March", "April", "May", "June",
      "July", "August", "September", "October", "November", "December"
    ];

    // Populate dropdowns
    function populateDropdowns() {
      const now = new Date();
      months.forEach((month, index) => {
        const opt = document.createElement("option");
        opt.value = index + 1;
        opt.textContent = month;
        if (index === now.getMonth()) opt.selected = true;
        monthSelect.appendChild(opt);
      });

      for (let y = now.getFullYear(); y >= 2020; y--) {
        const opt = document.createElement("option");
        opt.value = y;
        opt.textContent = y;
        if (y === now.getFullYear()) opt.selected = true;
        yearSelect.appendChild(opt);
      }
    }

    // Render attendance data
    function renderAttendance(data) {
      attendanceBody.innerHTML = "";
      data.forEach((record) => {
        const tr = document.createElement("tr");
        const dateCell = document.createElement("td");
        dateCell.textContent = record.date;
        tr.appendChild(dateCell);

        ["monday", "tuesday", "wednesday", "thursday", "friday"].forEach((day) => {
          const td = document.createElement("td");
          td.textContent = record[day] || "-";
          tr.appendChild(td);
        });

        attendanceBody.appendChild(tr);
      });

      if (data.length === 0) {
        attendanceBody.innerHTML = '<tr><td colspan="6">No attendance data available.</td></tr>';
      }
    }

    // Fetch attendance from backend
    function fetchAttendance() {
      const month = monthSelect.value;
      const year = yearSelect.value;

      fetch(`http://localhost:5000/api/attendance/${regNo}?month=${month}&year=${year}`)
        .then((res) => res.json())
        .then((data) => {
          renderAttendance(data);
        })
        .catch((err) => {
          console.error("Error fetching attendance:", err);
          attendanceBody.innerHTML = '<tr><td colspan="6" class="text-danger">Error loading data</td></tr>';
        });
    }

    // Auto refresh every 10 seconds
    setInterval(fetchAttendance, 10000); // 10,000 ms = 10 sec

    // Load on page ready
    document.addEventListener("DOMContentLoaded", () => {
      populateDropdowns();
      fetchAttendance();

      monthSelect.addEventListener("change", fetchAttendance);
      yearSelect.addEventListener("change", fetchAttendance);
    });
  </script>
</body>
</html>