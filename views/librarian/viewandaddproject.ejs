<script>
document.addEventListener("DOMContentLoaded", () => {
  fetch('/librarian/departments/catalogs')
    .then(res => res.json())
    .then(data => {
      const container = document.getElementById("projectDepartments");

      if (!Array.isArray(data) || data.length === 0) {
        container.innerHTML = `<p class="text-muted">No departmental project catalogs found.</p>`;
        return;
      }

      const grouped = {};

      data.forEach(item => {
        if (!grouped[item.department]) grouped[item.department] = [];
        grouped[item.department].push(item);
      });

      container.innerHTML = Object.entries(grouped).map(([dept, projects]) => `
        <div class="col-12 mb-4">
          <h3 class="text-primary">${dept}</h3>
          <div class="row">
            ${projects.map(p => `
              <div class="col-md-4">
                <div class="card shadow-sm mb-3">
                  <img src="/uploads/projects/${p.image || 'default.jpg'}" class="card-img-top" alt="${p.title}" style="height: 180px; object-fit: cover;">
                  <div class="card-body">
                    <h5 class="card-title">${p.title}</h5>
                    <p class="card-text">
                      <strong>Author:</strong> ${p.author}<br>
                      <strong>Year:</strong> ${p.year}<br>
                      <strong>Status:</strong> ${p.status}
                    </p>
                  </div>
                </div>
              </div>
            `).join('')}
          </div>
        </div>
      `).join('');
    })
    .catch(err => {
      console.error("Error fetching project departments:", err);
      document.getElementById("projectDepartments").innerHTML =
        `<p class="text-danger">Error loading department catalog.</p>`;
    });
});
</script>

